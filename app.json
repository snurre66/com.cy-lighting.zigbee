{
  "id": "com.cy-lighting.zigbee",
  "version": "1.0.0",
  "sdk": 3,
  "compatibility": ">=5.0.0",
  "brandColor": "#FF6700",
  "category": "lights",
  "name": {
    "en": "CY-LIGHTING"
  },
  "description": {
    "en": "Brighten up your smart home with the Zigbee lighting solutions from CY-LIGHTING"
  },
  "author": {
    "name": "ThV"
  },
  "contributors": {
    "developers": [
      {
        "name": "Thomas Veiv√•g",
        "email": "thomas.veivag@gmail.com"
      }
    ]
  },
  "images": {
    "large": "assets/images/large.png",
    "small": "assets/images/small.png"
  },
  "drivers": [
    {
      "id": "lightify_dimmable_white",
      "name": {
        "en": "Dimmable White Bulb E27 (ZigBee)"
      },
      "class": "light",
      "capabilities": [
        "onoff",
        "dim"
      ],
      "capabilitiesOptions": {
        "dim": {
          "opts": {
            "duration": true
          }
        },
        "onoff": {
          "setOnDim": false
        }
      },
      "images": {
        "large": "drivers/lightify_dimmable_white/assets/images/large.png",
        "small": "drivers/lightify_dimmable_white/assets/images/small.png"
      },
      "zigbee": {
        "manufacturerName": "CY-LIGHTING",
        "productId": "DM A60F",
        "endpoints": {
          "1": {
            "clusters": [
              0,
              4,
              6,
              8
            ]
          }
        },
        "learnmode": {
          "instruction": {
            "en": "Toggle the bulb to start pairing.\n\nIf pairing does not automatically start within 20 seconds, try resetting the device by toggling it 6 times (one toggle: 5 seconds off, 5 seconds on). It will flash to indicate it has been reset."
          }
        }
      },
      "settings": []
    }
  ],
  "flow": {}
}
